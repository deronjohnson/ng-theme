{
  "name": "ng-theme",
  "version": "0.0.1",
  "description": "A base theme for WordPress + Angular 2",
  "license": "MIT",
  "scripts": {
    "start": "tsc && concurrently \"npm run tsc:w\" \"npm run sass-watch\" \"npm run b-sync\" ",
    "postinstall": "typings install",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "typings": "typings",
    "sass-build": "node-sass assets/styles/main.scss dist/css/main.css",
    "sass-watch": "node-sass -w assets/styles/main.scss dist/css/main.css",
    "b-sync": "browser-sync start --proxy 'ng.dev' --files 'dist'"
  },
  "dependencies": {
    "@angular/common": "2.0.0-rc.4",
    "@angular/compiler": "2.0.0-rc.4",
    "@angular/core": "2.0.0-rc.4",
    "@angular/forms": "0.2.0",
    "@angular/http": "2.0.0-rc.4",
    "@angular/platform-browser": "2.0.0-rc.4",
    "@angular/platform-browser-dynamic": "2.0.0-rc.4",
    "@angular/router": "3.0.0-beta.1",
    "@angular/router-deprecated": "2.0.0-rc.2",
    "@angular/upgrade": "2.0.0-rc.4",
    "angular2-in-memory-web-api": "0.0.14",
    "bootstrap-sass": "^3.3.7",
    "core-js": "^2.4.0",
    "reflect-metadata": "^0.1.3",
    "rxjs": "5.0.0-beta.6",
    "systemjs": "0.19.27",
    "zone.js": "^0.6.12"
  },
  "devDependencies": {
    "browser-sync": "^2.13.0",
    "concurrently": "^2.0.0",
    "node-sass": "^3.8.0",
    "typescript": "^1.8.10",
    "typings": "^1.0.4"
  }
}
